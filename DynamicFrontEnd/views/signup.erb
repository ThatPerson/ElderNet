<html>
	<head>
		<title>Sign Up</title>
		<style>
			div{
				color: darkgray;
				text-align: center;
			}
			.submit{
				text-align:center;
				background-color:white;
				border:1px solid lightgray;
				width:20%;
				height:10%;
				font-family:DEFAULT;
				font-size:130%;
				color:black
			}
			.submit:hover{
				text-align:center;
				background-color:lightgray;
				border:1px solid lightgray;
				width:20%;
				height:10%;
				font-family:DEFAULT;
				font-size:130%;
				color:black;
			}
			input{
				height:10%;
				width: 50%;
				text-align:center;
				margin:9%;
			}
			.half{
				font-size: 2em
			}
		</style>
		<link href="../css/bootstrap.min.css" rel="stylesheet">
		<link href="../css/style.css" rel="stylesheet">
	</head>
	
	<body>
		<span class="half silver"><a href="../index.html">Return to Eldernet</a></span>
		<div class="prime">
			Sign up
		</div>
		<form role="form" class="table" action="/login/signup" method="post">
			<div class="form-group">
				<input type="text" id="username" placeholder="Eldername" required>
			</div>
			<div class="form-group">
				<input type="password" id="password" placeholder="Elderpass" required>
			</div>
			<div class="form-group">
				<input type="password" id="re-password" placeholder="Re-enter Elderpass" required>
			</div>
			<div class="form-group">
				<input type="tel" id="phone" placeholder="Phone number" required>
			</div>
			<div class="form-group">
				<button class="submit link"id="submit">Sign up</button>
			</div>
		</form>
	</body>
</html>